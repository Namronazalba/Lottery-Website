<%= render "layouts/navbar_admin/navadmin" %>
<div class="main">
  <h1 style="color: blue; margin-top: 15px;">Banner's list</h1>
  <%= render "layouts/alert_msg/alert_notice" %>
  <%= link_to 'Add', new_admin_banner_path, class: 'btn btn-success mb-4', style:"width: 70px;"  %>
  <table class="table table-striped border border-success">
    <thead>
    <tr>
      <th scope="col">Preview</th>
      <th scope="col">Online at</th>
      <th scope="col">Offling at</th>
      <th scope="col">Status</th>
      <th scope="col"><A></A>Action</th>
    </tr>
    </thead>
    <% @banners.each do |banner| %>
      <tbody>
      <tr>
        <td><%= image_tag banner.preview.url,style: 'height: 150px;' if banner.preview? %></td>
        <td><%= banner.online_at %></td>
        <td><%= banner.offline_at %></td>
        <td><%= banner.status %></td>
        <td>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <%= link_to " edit ", edit_admin_banner_path(banner), class: "btn btn-info ", style:"width: 70px;" %>
            <%= link_to "delete", admin_banner_path(banner),data:{confirm:'Are you sure do you want to delete?'}, method: :delete, class: "btn btn-danger", style:"width: 70px;" %>
          </div>
        </td>
      </tr>
      </tbody>
    <% end %>
  </table>
  <br>
</div>
