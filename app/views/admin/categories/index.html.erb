<%= render "layouts/navbar_admin/navadmin" %>
<div class="main">
  <h1 style="color: blue; margin-top: 15px;">Categories list</h1>
  <%= link_to 'Add', new_admin_category_path, class: 'btn btn-success mb-4', style:"width: 70px;"  %>
  <% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>
  <table class="table table-striped border border-success" >
    <thead>
    <tr>
      <th scope="col">Category type</th>
      <th>Action</th>
    </tr>
    </thead>
    <% @categories.each do |category| %>
      <tbody>
      <tr>
        <td><%= category.name %></td>
        <td>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <%= link_to " edit ", edit_admin_category_path(category), class: "btn btn-info ", style:"width: 70px;" %>
            <%= link_to "delete", admin_category_path(category), method: :delete, class: "btn btn-danger", style:"width: 70px;" %>
          </div>
        </td>
      </tr>
      </tbody>
    <% end %>
  </table>
  <br>
</div>
