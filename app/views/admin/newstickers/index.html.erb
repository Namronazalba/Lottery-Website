<%= render "layouts/navbar_admin/navadmin" %>
<div class="main">
  <h1 style="color: blue; margin-top: 15px;">Newstiker list</h1>
  <%= render "layouts/alert_msg/alert_notice" %>
  <%= link_to 'Add', new_admin_newsticker_path, class: 'btn btn-success mb-4', style:"width: 70px;"  %>
  <table class="table table-striped border border-success">
    <thead>
    <tr>
      <th scope="col">Admin id</th>
      <th scope="col">Content</th>
      <th scope="col">Status</th>
      <th scope="col"><A></A>Action</th>
    </tr>
    </thead>
    <% @newstickers.each do |newsticker| %>
      <tbody>
      <tr>
        <td><%= newsticker.admin.email %></td>
        <td><%= newsticker.content %></td>
        <td><%= newsticker.status %></td>
        <td>
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <%= link_to " edit ", edit_admin_newsticker_path(newsticker), class: "btn btn-info ", style:"width: 70px;" %>
            <%= link_to "delete", admin_newsticker_path(newsticker),data:{confirm:'Are you sure do you want to delete?'}, method: :delete, class: "btn btn-danger", style:"width: 70px;" %>
          </div>
        </td>
      </tr>
      </tbody>
    <% end %>
  </table>
  <br>
</div>
