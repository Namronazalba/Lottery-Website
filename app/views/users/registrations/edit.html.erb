<section class="vh-100" style="background-color: #ffff; margin-top: 20px;">
  <div class="container py-5 h-100"  >
    <div class="row d-flex justify-content-center align-items-center h-100" >
      <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="width: 80%; margin-top: 50px;">
        <div class="card shadow-2-strong" style="border-radius: 1rem;margin-bottom: 100px;">

          <div class="card-body p-5 text-center">
            <%= render "layouts/alert_msg/alert_notice" %>
            <h2>Edit <%= resource_name.to_s.humanize %></h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render  "devise/shared/error_messages", resource: resource %>
              <div class="form-outline mb-4">
                <%= image_tag "http://localhost:3000/#{current_user.avatar.url}" if current_user.avatar? %>
                <%= f.file_field :avatar,class: "form-control", autofocus: true, autocomplete: "avatar" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.label :phone %><br />
                <%= f.phone_field :phone,class: "form-control", autofocus: true, autocomplete: "username" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.label :username %><br />
                <%= f.email_field :username,class: "form-control", autofocus: true, autocomplete: "username" %>
              </div>

              <div class="form-outline mb-4">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
              </div>
              <div class="form-outline mb-4">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password,class: "form-control", autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                <% end %>
              </div>
              <div class="form-outline mb-4">
                <%= f.label :password_confirmation  %>(<em><%= @minimum_password_length %> characters minimum</em>)<br />
                <%= f.password_field :password_confirmation,class: "form-control", autocomplete: "new-password" %>
              </div>
              <br>

              <div class="form-outline mb-4">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
                <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
              </div>

              <div class="pt-1 mb-4">
                  <%= f.submit "Update", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"%><br>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "layouts/sharednav/nav" %>