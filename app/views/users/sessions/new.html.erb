<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist" style="margin-top: 70px;position: fixed;width: 99%;">
    <li class="nav-item" role="presentation">
      <%= link_to "Log in", new_session_path(resource_name), class: "nav-link " %>
    </li>
    <li class="nav-item" role="presentation">
      <%= link_to "Sign up", new_user_registration_path, class: "nav-link active" %>
    </li>
  </ul>
<section class="vh-100" style="background-color: #ffff;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div><%= notice %></div>
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <h2 class="mb-5"> Client Login Page</h2>
            <%= form_for(resource, as: resource_name, url: new_admin_user_session_path) do |f| %>
              <div class="form-outline mb-4">
                <%= f.email_field :email, class: "form-control form-control-lg", autofocus: true, autocomplete: "email" %>
                <%= f.label :email, class: "form-label" %>
              </div>
              <div class="form-outline mb-4">
                <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "current-password" %>
                <%= f.label :password, class: "form-label" %>
              </div>
              <div class="pt-1 mb-4">
                <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>
<%= render "layouts/sharednav/nav" %>