<!--Show Page-->
<div class="container" style="margin-top: 100px; height: 100vh">
  <div class="card border-0">
    <h5 class="text-left">Claim Prize</h5>
    <div class="card-body m-3">
      <h3>Winning Bet</h3>
      <div><b>Serial Number:</b> <%= @winner.bet.serial_number %></div>
      <div><b>Item Name:</b> <%= @winner.item.name %></div>
      <div><b>Date Created:</b> <%= @winner.created_at %></div>
      <div class="mt-3">
        <%= form_for @winner, url: users_winner_path(@winner), method: :patch do |f| %>
          <b>Select Address:</b>
          <% current_user.addresses.each do |address| %>
            <div class="row mt-2">
              <div class="col d-flex ms-2" style="max-width: 40px">
                <%= f.radio_button :address, address.id, checked: address.is_default %>
              </div>
              <div class="col">
                <span class="badge rounded-pill mb-1" style="background-color: #055e13"> <%= address.genre %></span>
                <span class="badge rounded-pill mb-1" style="background-color: #055e13"><%= :Default if address.is_default %></span>
                <div>
                  <div class="fw-bold d-inline" style="display:inline">Name:</div>
                  <%= address.name %>
                </div>
                <div>
                  <div class="fw-bold d-inline" style="display:inline">Address:</div>
                  <%= concat_address(address) %>
                </div>
                <div>
                  <div class="fw-bold d-inline" style="display:inline">Phone number:</div>
                  <%= address.phone_number %>
                </div>
              </div>
            </div>
            <hr>
          <% end %>
          <div class="row">
            <div class="col-sm-2">
              <%= f.submit "Update", class: 'border btn btn-primary form-control' %>
            </div>
            <div class="col-sm-2">
              <%= link_to "Back", profile_path, class: 'border btn btn-primary form-control' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

<%= render "layouts/sharednav/nav" %>
